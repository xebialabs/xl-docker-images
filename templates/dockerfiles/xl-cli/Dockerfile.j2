FROM alpine:3.16 as installer

# Install dependencies
RUN apk update
RUN apk add --no-cache gawk unzip curl busybox-extras

ENV USER_UID=10001 APP_ROOT=/opt/xebialabs
ENV APP_HOME=${APP_ROOT}/{{ product }}

COPY resources/{{ product }}-{{ xl_version }}-linux-amd64.bin /tmp

RUN mkdir -p ${APP_HOME} && \
    mv /tmp/{{ product }}-{{ xl_version }}-linux-amd64.bin ${APP_HOME}/xl && \
    chgrp -R 0 ${APP_ROOT} && \
    chmod -R g=u ${APP_ROOT} && \
    chmod +x ${APP_HOME}/xl

FROM alpine:3.16

{% include 'metadata.j2' %}

ENV USER_UID=10001 APP_ROOT=/opt/xebialabs
ENV APP_HOME=${APP_ROOT}/{{ product }}

# Install dependencies
RUN apk update

# Install kubectl
RUN apk add --no-cache curl && \
    curl -LO "https://storage.googleapis.com/kubernetes-release/release/$(curl -s https://storage.googleapis.com/kubernetes-release/release/stable.txt)/bin/linux/amd64/kubectl" && \
    chmod +x kubectl && \
    mv kubectl /usr/local/bin/ && \
    apk del curl && \
    kubectl version --client --output=yaml

# Install keytool
RUN apk add --no-cache openjdk11-jre-headless ca-certificates

# Install yq
RUN apk add --no-cache yq &&\
    apk upgrade yq && \
    yq --version

# Install helm
RUN apk add --no-cache curl tar && \
    curl -LO https://get.helm.sh/helm-v3.7.0-linux-amd64.tar.gz && \
    tar -xvf helm-v3.7.0-linux-amd64.tar.gz && \
    chmod +x linux-amd64/helm && \
    mv linux-amd64/helm /usr/local/bin && \
    rm -rf helm-v3.7.0-linux-amd64.tar.gz linux-amd64 && \
    apk del curl && \
    helm version

# Install vim
RUN apk update && apk add vim xclip

# Install oc
RUN apk add gcompat
RUN apk add --no-cache curl ca-certificates gettext git openssh-client openssl tar gzip && \
    curl -L https://mirror.openshift.com/pub/openshift-v4/clients/oc/latest/linux/oc.tar.gz | tar zx && \
    mv oc /usr/local/bin && \
    apk del curl && \
    oc version --client

# Add user
RUN apk add --no-cache shadow && \
    useradd -d /opt/xebialabs -m -r -u 10001 -g 0 xebialabs

# Copy installed {{ product_name }}
COPY --from=installer ${APP_ROOT} ${APP_ROOT}

# Install Tini
ENV TINI_VERSION v0.19.0
ADD https://github.com/krallin/tini/releases/download/${TINI_VERSION}/tini-static ${APP_ROOT}/tini
RUN chmod +x ${APP_ROOT}/tini

# Set permissions
RUN chown -R 10001:10001 ${APP_ROOT}

WORKDIR ${APP_HOME}

# Don't run as root
USER 10001

ENTRYPOINT ["/opt/xebialabs/tini", "-v", "--", "/opt/xebialabs/xl-client/xl"]
